<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title><%= page_title %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="container">
    <!--共通ヘッダーの読込み-->
    <div id="header">
      <%= render "shared/header" %>
    </div>
    <div id="content">
      <!-- yieldにページごとのコンテンツが埋め込まれる-->
      <%= yield %>
    </div>
    <!--共通サイドバーの読込み-->
    <div id="sidebar">
      <%= render "shared/sidebar" %>
    </div>
    <!--共通フッターの読込み-->
    <div id="footer">
      <%= render "shared/footer" %>
    </div>
  </div>
</body>
</html>
